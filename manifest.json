{
	"manifest_version": 2,
	"version": "2.0b2",
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"author": "Infocatcher",
	"default_locale": "en",
	"applications": {
		"gecko": {
			"id": "linkPropertiesPlus@infocatcher",
			"strict_min_version": "57.0"
		}
	},

	"background": {
		"scripts": ["global.js", "background.js"]
	},
	"permissions": [
		"<all_urls>",
		"tabs",
		"webRequest",
		"webRequestBlocking",
		"contextMenus",
		"storage",
		"downloads",
		"notifications"
	],

	"options_ui": {
		"page": "options.html",
		"browser_style": true
	},
	"browser_action": {
		"browser_style": true,
		"default_title": "__MSG_linkProperties__",
		"default_icon": {
			"16": "icon-16.png",
			"32": "icon-32.png"
		}
	},
	"commands": {
		"_execute_browser_action": {
			"description": "__MSG_extensionName__"
		}
	},
	"icons": {
		"16": "icon-16.png",
		"32": "icon-32.png"
	}
}